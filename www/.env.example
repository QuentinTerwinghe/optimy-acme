APP_NAME=acme_corp
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:9481
APP_PORT=9481

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# MySQL Database Configuration (Docker)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=acme_corp
DB_USERNAME=acme_corp
DB_PASSWORD=acme_corp_password_change_in_production
DATABASE_PORT=34928
MYSQL_ATTR_SSL_MODE=DISABLED

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
# Queue Configuration
# Use 'database' for development/testing or 'rabbitmq' for production
# RabbitMQ is recommended for payment processing to ensure sequential, reliable job handling
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# MailCatcher Configuration (Docker)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailcatcher
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
MAILCATCHER_PORT=1786
MAILCATCHER_PORT_BIS=17980

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# RabbitMQ Configuration
# Used for reliable, sequential job processing (payment updates, notifications, etc.)
# To enable: Set QUEUE_CONNECTION=rabbitmq
# Benefits: Sequential processing prevents race conditions, built-in retry mechanism, better scalability
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=acme_corp
RABBITMQ_PASSWORD=acme_corp_password_change_in_production
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=default
